<Window x:Class="ProductEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="900">
    <Grid Margin="0,0,0,0" Background="White">
        <DataGrid x:Name="dgRecords" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,46,0,312"/>
        <Label Content="Northwind Database Product Editor" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Background="White"/>
        <GroupBox x:Name="grpEdit" Header="Edit Item" Margin="10,427,10,0"/>
        <Label Content="Selected Item:" HorizontalAlignment="Left" Margin="49,472,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbSelectedItem" HorizontalAlignment="Left" Margin="144,477,0,0" TextWrapping="Wrap" Text="[Item name]" VerticalAlignment="Top"/>


    </Grid>
</Window>
