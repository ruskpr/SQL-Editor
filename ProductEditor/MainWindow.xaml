<Window x:Class="ProductEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductEditor"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SQL Data Editor" Height="750" Width="900">
    <Grid Margin="0,0,0,0" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <!--Top content-->
        <!--Server connection-->
        <Label x:Name="lblCurrentConnection" Content="[Connected / Not Connected" HorizontalAlignment="Left" Margin="160,7,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnConnectWindow" Content="Connect to server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="134" Click="btnConnect_Click"/>

        <!--Table selection-->
        <Label Content="Select Table:" HorizontalAlignment="Left" Margin="59,7,0,0" VerticalAlignment="Top" Width="96" Grid.Column="1"/>
        <ComboBox x:Name="cbTables" Grid.Column="1" HorizontalAlignment="Left" Margin="155,8,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLoadRecords" Grid.Column="1" Content="Load Records" HorizontalAlignment="Left" Margin="302,10,0,0" VerticalAlignment="Top" Width="114" Click="btnLoadRecords_Click"/>

        <!--Middle content-->
        <DataGrid x:Name="dgRecords" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,48,10,312" Background="LightCyan" Grid.ColumnSpan="2"/>

        <GroupBox x:Name="grpEdit" Header="Edit Item" Margin="10,422,10,5" Grid.ColumnSpan="2"/>
        <Label Content="Selected Item:" HorizontalAlignment="Left" Margin="49,472,0,0" VerticalAlignment="Top"/>






    </Grid>
</Window>
