<Window x:Class="ProductEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductEditor"
        mc:Ignorable="d"
        Title="SQL Data Editor" Height="750" Width="900">
    <Grid Margin="0,0,0,0" Background="White">
        <!--Top Header-->
        <Label Content="Table name:" HorizontalAlignment="Left" Margin="243,12,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbTableName" HorizontalAlignment="Left" Margin="321,16,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TabIndex="1"/>
        <Label Content="Database name:" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbDatabaseName" HorizontalAlignment="Left" Margin="110,16,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TabIndex="0"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="474,16,0,0" VerticalAlignment="Top" Width="90"/>


        <DataGrid x:Name="dgRecords" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,46,0,312" Background="LightCyan"/>
        <GroupBox x:Name="grpEdit" Header="Edit Item" Margin="10,422,10,5"/>
        <Label Content="Selected Item:" HorizontalAlignment="Left" Margin="49,472,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbSelectedItem" HorizontalAlignment="Left" Margin="144,477,0,0" TextWrapping="Wrap" Text="[Item name]" VerticalAlignment="Top"/>


    </Grid>
</Window>
