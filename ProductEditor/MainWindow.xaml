<Window x:Class="ProductEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductEditor"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SQL Data Editor" Height="675" Width="900">
    <Grid x:Name="gridMain" Background="DarkGray" Height="734" VerticalAlignment="Top" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <!--Top content-->
        <!--Server connection-->
        <Label x:Name="lblCurrentConnection" Content="[Connected / Not Connected]" HorizontalAlignment="Left" Margin="160,7,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="344"/>
        <Button x:Name="btnConnectWindow" Content="Connect to server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="134" Click="btnConnect_Click"/>

        <!--Table selection-->
        <Label x:Name="lblSelectTable" Content="Select Table:" Tag="tableSelection" HorizontalAlignment="Right" Margin="0,7,270,0" VerticalAlignment="Top" Width="79" Grid.Column="1"/>
        <ComboBox x:Name="cbTables" Tag="tableSelection" Grid.Column="1" HorizontalAlignment="Right" Margin="0,9,128,0" VerticalAlignment="Top" Width="142"/>
        <Button x:Name="btnLoadRecords" Tag="tableSelection" Grid.Column="1" Content="Load records" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="114" Click="btnLoadRecords_Click"/>

        <!--Middle content-->
        <DataGrid x:Name="dgRecords" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,48,10,312" Background="Black" Grid.ColumnSpan="2" MouseDown="dgRecords_MouseDown"/>

        <!--Edit groupbox-->
        <GroupBox x:Name="grpEdit" Header="Edit Item" Margin="10,422,10,79" Grid.ColumnSpan="2">
        </GroupBox>
        <!--labels-->
        <Label x:Name="lbCurrentTable" Content="Current Table: [tablename]" HorizontalAlignment="Left" Margin="49,452,0,0" VerticalAlignment="Top"/>
        
        <!--selected column-->
        <Label x:Name="lb2" Content="Selected column:" HorizontalAlignment="Left" Margin="49,507,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbSelectedColumn" Content="[col name]" HorizontalAlignment="Left" Margin="181,507,0,0" VerticalAlignment="Top"/>

        <Label x:Name="lb1" Content="Selected Item:" HorizontalAlignment="Left" Margin="49,538,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbSelectedItem" Content="[selected Item]" HorizontalAlignment="Center" Margin="0,538,0,0" VerticalAlignment="Top"/>

        <Label x:Name="lbChangeto" Content="Change to:" HorizontalAlignment="Left" Margin="49,571,0,0" VerticalAlignment="Top"/>

        <!--textboxes-->
        <TextBox x:Name="tbChangeTo" HorizontalAlignment="Left" Margin="175,575,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>

        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="175,609,0,0" VerticalAlignment="Top" Width="189" Height="25" Click="btnUpdate_Click"/>



    </Grid>
</Window>
