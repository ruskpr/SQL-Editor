<Window x:Class="ProductEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductEditor"
        mc:Ignorable="d"
        Title="SQL Data Editor" Height="750" Width="900">
    <Grid Margin="0,0,0,0" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <!--Top content-->
        <!--Connected to label-->
        <Label x:Name="lblConnectedTo" Content="[Connected / Not Connected" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>

        <!--Connect button-->
        <Button x:Name="btnConnectWindow" Content="Connect to server" HorizontalAlignment="Left" Margin="266,16,0,0" VerticalAlignment="Top" Width="134" Click="btnConnect_Click" Grid.Column="1"/>

        <!--Middle content-->
        <ListBox x:Name="lstTest" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="49,138,110,360"/>
        <DataGrid x:Name="dgRecords" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="154,279,0,312" Background="LightCyan" Grid.Column="1"/>

        <GroupBox x:Name="grpEdit" Header="Edit Item" Margin="10,422,10,5" Grid.ColumnSpan="2"/>
        <Label Content="Selected Item:" HorizontalAlignment="Left" Margin="49,472,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
